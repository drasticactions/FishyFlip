@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="https://bsky.social/static/logo-small.png" width="48" height="48" alt="Bluesky" class="mb-2">
                    <h4 class="card-title">Sign in to Bluesky</h4>
                    <p class="text-muted">Enter your Bluesky credentials to continue</p>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input name="ReturnUrl" type="hidden" value="@ViewData["ReturnUrl"]" />

                    <div class="mb-3">
                        <label asp-for="Identifier" class="form-label">Handle or Email</label>
                        <input asp-for="Identifier" class="form-control" placeholder="your-handle.bsky.social or email@example.com" required />
                        <span asp-validation-for="Identifier" class="text-danger"></span>
                        <div class="form-text">Enter your Bluesky handle (e.g., alice.bsky.social) or email address</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">App Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your app password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text">
                            Use an <a href="https://bsky.app/settings/app-passwords" target="_blank">app password</a>, not your main account password
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InstanceUrl" class="form-label">Server (Advanced)</label>
                        <input asp-for="InstanceUrl" class="form-control" value="https://bsky.social" />
                        <span asp-validation-for="InstanceUrl" class="text-danger"></span>
                        <div class="form-text">Leave as default unless you're using a custom PDS</div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <small class="text-muted">
                        Don't have a Bluesky account? 
                        <a href="https://bsky.app" target="_blank">Sign up at bsky.app</a>
                    </small>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <div class="alert alert-info">
                <h6 class="alert-heading">About App Passwords</h6>
                <p class="mb-0">
                    For security, use an <strong>app password</strong> instead of your main account password. 
                    Create one at <a href="https://bsky.app/settings/app-passwords" target="_blank" class="alert-link">bsky.app/settings/app-passwords</a>.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}