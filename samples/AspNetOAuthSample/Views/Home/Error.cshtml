@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <div class="card border-danger">
        <div class="card-body py-5">
            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
            <h3 class="text-danger mt-3">Oops! Something went wrong</h3>
            <p class="text-muted">An error occurred while processing your request.</p>

            @if (Model?.ShowRequestId == true)
            {
                <div class="mt-4">
                    <small class="text-muted">Request ID: <code>@Model.RequestId</code></small>
                </div>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>
                    Return Home
                </a>
            </div>
        </div>
    </div>
</div>