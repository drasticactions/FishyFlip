@using FishyFlip.Lexicon.App.Bsky.Actor
@{
    ViewData["Title"] = "Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-circle me-2"></i>Your Bluesky Profile</h2>
    <div class="btn-group" role="group">
        <a asp-action="Timeline" class="btn btn-outline-primary">
            <i class="bi bi-list-ul me-1"></i>Timeline
        </a>
        <a asp-action="CreatePost" class="btn btn-primary">
            <i class="bi bi-plus-square me-1"></i>New Post
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @ViewBag.Error
    </div>
}
else if (ViewBag.Profile != null)
{
    var profile = ViewBag.Profile as FishyFlip.Lexicon.App.Bsky.Actor.ProfileViewDetailed;
    
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(profile?.Avatar))
                    {
                        <img src="@profile.Avatar" alt="Avatar" class="rounded-circle mb-3 profile-avatar" width="150" height="150">
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center profile-avatar" 
                             style="width: 150px; height: 150px;">
                            <i class="bi bi-person-fill text-white" style="font-size: 4rem;"></i>
                        </div>
                    }
                    
                    <h4 class="card-title mb-1">@(profile?.DisplayName ?? ViewBag.Handle)</h4>
                    <p class="text-muted mb-2">@@@ViewBag.Handle</p>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Email))
                    {
                        <p class="text-muted small">
                            <i class="bi bi-envelope me-1"></i>@ViewBag.Email
                        </p>
                    }
                    
                    @if (!string.IsNullOrEmpty(profile?.Description))
                    {
                        <div class="mt-3 p-3 bg-light rounded">
                            <p class="mb-0 small">@profile.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Profile Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-4">
                        <div class="col-4">
                            <div class="stat-item">
                                <h3 class="text-primary mb-1">@(profile?.FollowersCount?.ToString("N0") ?? "0")</h3>
                                <small class="text-muted">Followers</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <h3 class="text-success mb-1">@(profile?.FollowsCount?.ToString("N0") ?? "0")</h3>
                                <small class="text-muted">Following</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <h3 class="text-info mb-1">@(profile?.PostsCount?.ToString("N0") ?? "0")</h3>
                                <small class="text-muted">Posts</small>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <small class="text-muted d-block">Decentralized Identifier (DID)</small>
                                <code class="small">@ViewBag.Handle</code>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <small class="text-muted d-block">Member Since</small>
                                <span class="small">@(profile?.CreatedAt?.ToString("MMMM dd, yyyy") ?? "Unknown")</span>
                            </div>
                        </div>
                    </div>
                    
                    @if (profile?.Labels?.Any() == true)
                    {
                        <div class="mt-3">
                            <small class="text-muted d-block mb-2">Labels</small>
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var label in profile.Labels)
                                {
                                    <span class="badge bg-secondary">@label</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-shield-check me-2"></i>
                        Authentication Details
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <small class="text-muted">Authentication Method</small><br>
                            <span class="badge bg-success">OAuth 2.0</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Session Type</small><br>
                            <span class="badge bg-info">Secure Cookies</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Token Management</small><br>
                            <span class="badge bg-primary">Auto-Refresh</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading your profile...</p>
    </div>
}