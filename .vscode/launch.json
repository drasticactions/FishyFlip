{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FFSourceGen",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_ffsourcegen",
            "program": "${workspaceFolder}/tools/FFSourceGen/bin/Debug/net9.0/FFSourceGen.dll",
            "args": [ "generate", "${workspaceFolder}/../atproto/lexicons", "-o", "${workspaceFolder}/src/FishyFlipDX/" ],
            "cwd": "${workspaceFolder}/tools/FFSourceGen",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}